--Exercicio 1--
SELECT c.nome AS cliente,
v.produto
FROM CLIENTES c
JOIN VENDAS v
ON c.id_cliente = v.id_cliente;

--Exercicio 2--
SELECT c.nome,
c.cidade
FROM CLIENTES c
LEFT JOIN VENDAS v
ON c.id_cliente = v.id_cliente
WHERE v.id IS NULL;

--Exercicio 3--
SELECT c.nome,
c.cidade
FROM CLIENTES c
LEFT JOIN VENDAS v
ON c.id_cliente = v.id_cliente
WHERE v.id IS NULL;

--Exercicio 4--
SELECT c.cidade,
NVL(SUM(v.valor), 0) AS total_vendas
FROM CLIENTES c
LEFT JOIN VENDAS v
ON c.id_cliente = v.id_cliente
GROUP BY c.cidade;
